<openerp>
    <data>

        <!-- wizard action on protocollo.protocollo -->
        <act_window id="protocollo_modify_action"
            name="Modifica Straordinaria Protocollo"
            src_model="protocollo.protocollo"
            res_model="protocollo.modify.wizard"
            view_type="form" view_mode="form"
            target="new"
            groups="seedoo_protocollo.group_protocollo_user,seedoo_protocollo.group_protocollo_manager"/>

        <!-- wizard view -->
        <record id="protocollo_modify_view1" model="ir.ui.view">
            <field name="name">Modifica Straordinaria Protocollo</field>
            <field name="model">protocollo.modify.wizard</field>
            <field name="arch" type="xml">
                <form string="Protocollo" version="7.0">
                    <sheet>
                        <div class="gedoc_header">
                            <group col="4">
                                <field name="name"/>
                                <field name="registration_date"/>
                                <field name="type"/>
                            </group>
                        </div>
                        <separator string="Causa della modifica" />
	                    <field name="cause" colspan="4"/>
	                    <newline />
                        <group col="4" string="Informazioni Generali">
                        <group col="2" >
                            	<field name="subject" />
                        </group>
                        <group col="2" >
                                <field name="typology" />
                                <newline/>
                                <field name="receiving_date"/>
                        </group>
                        </group>
	                    <notebook>
	                    	<page string="Titolario">
	                    	  <group col="4">
			                    	<field name="classification" nolabel="1" widget="m2o_tree"
                                               options="{'limit': 10, 'create': false, 'create_edit': false}"/>
		                      </group>
	                    	</page>
                            <page string="Fascicoli">
	                    	  <group col="4">
			                    	<field name="dossier_ids" nolabel="1" domain="[('state','=','open')]"/>
                              </group>
                            </page>
                            <page string="Note">
	                    	  <group col="4">
			                    	<field name="notes" colspan="4" nolabel="1"/>
                              </group>
                            </page>
	                    </notebook>
                    </sheet>
                    <footer>
                        <button string="Ok" name="action_save" type="object" class="oe_highlight"/>
                        o
                        <button string="Abbandona" class="oe_link" special="cancel" />    
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
