<openerp>
    <data>

        <!-- wizard action on protocollo.protocollo -->
        <act_window id="protocollo_modify_pec_action"
                    name="Modifica Straordinaria PEC Destinatari Protocollo"
                    src_model="protocollo.protocollo"
                    res_model="protocollo.modify.pec.wizard"
                    view_type="form" view_mode="form"
                    target="new"
                    groups="seedoo_protocollo.group_protocollo_manager"/>

        <!-- wizard view -->
        <record id="protocollo_modify_pec_view1" model="ir.ui.view">
            <field name="name">Modifica Straordinaria PEC Destinatari
                Protocollo
            </field>
            <field name="model">protocollo.modify.pec.wizard</field>
            <field name="arch" type="xml">
                <form string="Protocollo" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                            <separator string="Destinatari"/>
                            <group col="4" colspan="4">
                                <field name="sender_receivers" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"
                                               string="Nome Cognome/Ragione Sociale"/>
                                        <field name="pec_mail"/>
                                    </tree>
                                </field>
                            </group>
                            <label for="cause"/>
                            <field name="cause"
                                   attrs="{'required': [('protocol_sent', '=', False)]}"
                                   colspan="4"/>
                            <field name="protocol_sent" invisible="1"/>
                        </div>
                    </sheet>
                    <separator
                            string=" Premendo su Modifica verra' inviata una nuova pec con gli indirizzi inseriti"
                            attrs="{'invisible': [('protocol_sent', '=', False)]}"/>
                    <footer>
                        <button string="Modifica" name="action_save"
                                type="object" class="oe_highlight"/>
                        <button string="Reinvio Mail" name="action_resend"
                                type="object"
                                attrs="{'invisible': [('protocol_sent', '=', False)]}"
                                class="oe_highlight"/>
                        o
                        <button string="Abbandona" class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
