<openerp>
    <data>
        <!-- wizard action on protocollo.protocollo -->
        <act_window id="create_protocollo_pec_action"
                    name="Protocolla Pec"
                    src_model="mail.message"
                    res_model="protocollo.pec.wizard"
                    view_type="form" view_mode="form"
                    target="new"
                    context="{'pec_messages': True}"
                    groups="seedoo_protocollo.group_protocollo_user"/>

        <!-- wizard view -->
        <record id="create_protocollo_wizard_view" model="ir.ui.view">
            <field name="name">Protocolla PEC in ingresso</field>
            <field name="model">protocollo.pec.wizard</field>
            <field name="arch" type="xml">
                <form string="Protocollo PEC" version="7.0">
                    <sheet>
                        <div class="gedoc_header">
                            <group col="4">
                                <field name="subject"/>
                                <field name="receiving_date"/>
                            </group>
                        </div>
                        <newline/>

                        <group col="4">
                            <separator string="Contenuti" colspan="4"/>
                            <field name="body" colspan="4" nolabel="1"/>
                        </group>

                        <notebook>
                            <page string="Mittenti">
                                <group col="4" colspan="4">
                                    <field name="sender_receivers" nolabel="1">
                                        <tree>
                                            <field name="type"/>
                                            <field name="partner_id"/>
                                            <field name="name" string="Nome Cognome/Ragione Sociale"/>
                                            <field name="street"/>
                                            <field name="zip"/>
                                            <field name="city"/>
                                            <field name="country_id"/>
                                            <field name="pec_mail"/>
                                            <field name="email"/>
                                            <field name="phone"/>
                                        </tree>
                                        <form>
                                            <div class="gedoc_header">
                                                <group col="4">
                                                    <field name="type"/>
                                                    <field name="partner_id"/>
                                                </group>
                                                <group col="4">
                                                    <group col="4" colspan="2">
                                                        <field name="name" colspan="4"/>
                                                    </group>
                                                    <group col="4" colspan="2">
                                                    </group>
                                                </group>
                                            </div>
                                            <div>
                                                <group col="4">
                                                    <separator string="Info di Recapito" colspan="4"/>
                                                    <field name="street"/>
                                                    <field name="zip"/>
                                                    <field name="city"/>
                                                    <field name="country_id"/>
                                                    <field name="pec_mail"/>
                                                    <field name="email"/>
                                                    <field name="phone"/>
                                                </group>
                                            </div>
                                        </form>
                                    </field>
                                </group>
                            </page>
                            <page string="Classificazioni">
                                <group col="4">
                                    <group>
                                        <label for="dossier_ids"/>
                                        <field name="dossier_ids" nolabel="1"
                                               options="{'limit': 10, 'create': false, 'create_edit': false}"
                                               domain="[('state','=','open')]"/>
                                    </group>
                                    <newline/>
                                    <group>
                                        <label for="classification"/>
                                        <field name="classification" nolabel="1" widget="m2o_tree"
                                               options="{'limit': 10, 'create': false, 'create_edit': false}"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Note">
                                <label for="notes"/>
                                <field name="notes" colspan="4"/>
                            </page>

                        </notebook>

                    </sheet>
                    <footer>
                        <button string="Ok" name="action_save" type="object" class="oe_highlight"/>
                        o
                        <button string="Abbandona" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
